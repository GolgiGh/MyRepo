
<%- include('../partials/header.ejs')%>
<style type="text/css">
    body, .navbar, .navbar-left, .navbar-right, .obed {
       background-image: url('/images/interiorImage.MQ6.12.20210713105346.jpeg');
       margin: 0;
   }
</style>
<div class ="pool">
<form method="POST" action="/connections/<%=connection.id%>?_method=PUT"  >
<table>
<tr>
    <td> <label for="topic">Topic:</label></td>
    <td><input type="text" id="topic" required placeholder="topic" name="topic" size="60" width="20" value="<%=connection.topic%>" required></td>
</tr>

<tr>
<td><label for="title">Title:</label></td>
<td><input type="text" id="title" name="title" required placeholder="title" size="60" value="<%=connection.title%>" required></td>
</tr>
<tr>
<td><label for="host">Host:</label></td>
<td><input type="text" id="host" name="host" required placeholder="host" size="60" value="<%=connection.host%>" required></td>
</tr>

<tr>
    <td><label for="details">Details:</label></td>
    <td><textarea rows="4" cols="60" id="details" name="details" required placeholder="description" size="60" required minlength="10"><%=connection.details%></textarea></td>
</tr>

<tr>
    <td><label for="where">Where:</label></td>
    <td><input type="text" id="where" name="where" required placeholder="where" size="60"value="<%=connection.where%>" required></td>
</tr>

<tr>
    <td><label for="when">When:</label></td>
    <td><input type="date" id="when" name="when"  size="60"value="<%=connection.when%>" required></td>
</tr>
<tr>
    <td><label for="start">Start:</label></td>
    <td><input type="time"  name="start"  value="<%=connection.start%>" required></td>
</tr>

<tr>
    <td><label for="end">End:</label></td>
    <td><input type="time" id="end" name="end" size="30"value="<%=connection.end%>" required></td>
</tr>

<tr>
    <td><label for="imageURL">image URL:</label></td>
    <td><input type="text" id="imageURL" name="image_url" required placeholder="imageURL" size="60"value="<%=connection.image_url%>" required></td>
</tr>
</table>
<input type="submit" value=" edit link" >
</form>
</div>


<%- include('../partials/footer.ejs')%>
